<% layout('layout', {title: 'Login'}) -%>

<h1 class="mb-4"><%= t("loginPage.welcomeMessage") %></h1>
<form action="/auth/login" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label"><%= t("loginPage.username") %></label>
        <input type="text" class="form-control" id="username" name="username" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label"><%= t("loginPage.password") %></label>
        <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <button type="submit" class="btn btn-primary"><%= t("loginPage.loginButton") %></button>
</form>
